@model movieSiteApp.webui.Models.MovieCategoryViewModel

<h2>Movie Details</h2>

<dl class="row">
    <dt class="col-sm-2">
        Title
    </dt>
    <dd class="col-sm-10">
        @Model.Movie.Title
    </dd>
    <dt class="col-sm-2">
        Duration
    </dt>
    <dd class="col-sm-10">
        @Model.Movie.Duration
    </dd>
    <dt class="col-sm-2">
        Release Date
    </dt>
    <dd class="col-sm-10">
        @Model.Movie.ReleaseDate
    </dd>
    <dt class="col-sm-2">
        Imdb Rating
    </dt>
    <dd class="col-sm-10">
        @Model.Movie.ImdbRating
    </dd>
    <dt class="col-sm-2">
        Categories
    </dt>
    <dd class="col-sm-10">
        @foreach (var category in Model.Categories)
        {
            <span>@category.Name</span>
        }
    </dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
