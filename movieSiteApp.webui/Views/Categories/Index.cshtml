@model List<movieSiteApp.entity.Category>

<h2>Category List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Categories", new { id = category.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Categories", new { id = category.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="margin-top: 20px;">
    <a href="@Url.Action("Create", "Categories")" class="btn btn-primary">Add Category</a>
</div>